{
    "extends": [
        "eslint:recommended"
    ],
    "env": {
        "browser": true,
        "amd": true,
        "es6": true,
        "node": true,
        "mocha": true
    },
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 7,
        "sourceType": "module",
        "ecmaFeatures": {
            "experimentalObjectRestSpread": true,
            "jsx": true
        }
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "semi": 1,
        // "indent": ["warn", 4],
        "comma-dangle": 1,
        "quotes": [ 1, "single" ],
        "no-undef": 1,
        "global-strict": 0,
        "no-extra-semi": 1,
        "no-underscore-dangle": 0,
        "no-console": 1,
        "no-unused-vars": 1,
        "no-trailing-spaces": [1, { "skipBlankLines": true }],
        "no-unreachable": 1,
        "no-alert": 0,
        "no-eval": 1,
        "no-implied-eval": 1,
        "no-new-func": 1,
        "no-with": 1,
        "no-fallthrough": 1,
        "no-implicit-globals": 1,
        "react/jsx-uses-react": 1,
        "react/jsx-uses-vars": 1
    }
}
